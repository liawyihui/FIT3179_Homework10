{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Comparison of Minimum Property Prices, Room Count, and Area Across Countries",
        "fontSize": 20
    },
    "width": 800,
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Homework10/main/data/min_price_by_country.csv"
    },
    "params": [
        {
            "name": "Property_Price",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 500000,
                "step": 10000,
                "name": "Minimum Property Price: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.min_price_in_USD > Property_Price"
        }
    ],
    "encoding": {
        "x": {
            "field": "rooms",
            "type": "ordinal",
            "title": "Number of Rooms",
            "axis": {
                "labelAngle": 0
            }
        },
        "y": {
            "field": "area",
            "type": "quantitative",
            "title": "Total Area (m²)"
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "min_price_in_USD",
                    "type": "quantitative",
                    "title": "Property Price (USD)",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            50000,
                            100000,
                            200000,
                            300000,
                            400000,
                            500000
                        ],
                        "range": [
                            50,
                            100,
                            200,
                            400,
                            800,
                            1600,
                            2300
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "title": "Continents",
                    "scale": {
                        "domain": [
                            "North America",
                            "Europe",
                            "Asia",
                            "Australia"
                        ],
                        "range": [
                            "#e41a1c",
                            "#ff7f00",
                            "#984ea3",
                            "#a65628"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "country",
                        "title": "Country"
                    },
                    {
                        "field": "area",
                        "title": "Total Area (m²)"
                    },
                    {
                        "field": "min_price_in_USD",
                        "title": "Property Price (USD)"
                    },
                    {
                        "field": "continent",
                        "title": "Continent"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -23,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": [
                        {
                            "test": "datum['country'] == 'Belarus' || datum['country'] == 'Australia' || datum['country'] == 'United Arab Emirates'|| datum['country'] == 'Turkey'|| datum['country'] == 'Finland'|| datum['country'] == 'Russia'|| datum['country'] == 'United States of America'|| datum['country'] == 'Indonesia' || datum['country']== 'Thailand' || datum['country']== 'Spain' || datum['country']== 'Croatia' || datum['country']== 'Cyprus' || datum['country']== 'Hungary'",
                            "value": 1
                        }
                    ],
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "country",
                        "title": "Country"
                    },
                    {
                        "field": "area",
                        "title": "Total Area (m²)"
                    },
                    {
                        "field": "min_price_in_USD",
                        "title": "Property Price (USD)"
                    },
                    {
                        "field": "continent",
                        "title": "Continent"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "bottom",
                "dx": -70,
                "dy": -10,
                "fontSize": 11.5
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal",
                    "condition": [
                        {
                            "test": "datum['country'] == 'United Arab Emirates'",
                            "value": "Outlier for 1 room category"
                        }
                    ]
                },
                "color": {
                    "value": "blue"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'United Arab Emirates'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "bottom",
                "dx": -100,
                "dy": 38,
                "fontSize": 11.5
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal",
                    "condition": [
                        {
                            "test": "datum['country'] == 'Australia'",
                            "value": [
                                "Australia has highest property price of",
                                "559000 USD among the countries"
                            ]
                        }
                    ]
                },
                "color": {
                    "value": "blue"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Australia'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "bottom",
                "dx": -100,
                "dy": 25,
                "fontSize": 11.5
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal",
                    "condition": [
                        {
                            "test": "datum['country'] == 'Finland'",
                            "value": [
                                "Property with minimum price in Finland",
                                "has highest number of rooms among the",
                                "countries"
                            ]
                        }
                    ]
                },
                "color": {
                    "value": "blue"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Finland'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "bottom",
                "dx": -100,
                "dy": 20,
                "fontSize": 11.5
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal",
                    "condition": [
                        {
                            "test": "datum['country'] == 'Belarus'",
                            "value": [
                                "Belarus has lowest property price of 3000",
                                "USD among the countries"
                            ]
                        }
                    ]
                },
                "color": {
                    "value": "blue"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Belarus'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}